{
  "name": "resume",
  "version": "1.0.0",
  "description": "ðŸ’¼ Web based resume",
  "scripts": {
    "build": "run-s clean eleventy:prod",
    "build:debug": "run-s clean eleventy:debug",
    "build:serve": "run-s clean eleventy:prod && serve dist",
    "clean": "rm -rf dist",
    "dev": "run-s clean eleventy:dev",
    "format": "prettier --write \"src/**/*.(js|ts|css|scss)\"",
    "lint": "eslint --fix \"src/**/*.(js|ts)\"",
    "eleventy:debug": "cross-env ELEVENTY_ENV=production DEBUG=Eleventy* eleventy --dryrun",
    "eleventy:dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "eleventy:prod": "cross-env ELEVENTY_ENV=production eleventy",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fourjuaneight/resume"
  },
  "author": "Juan Villela",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.4",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/preset-env": "^7.14.4",
    "critical": "^3.1.0",
    "cssesc": "^3.0.0",
    "cssnano": "^5.0.5",
    "date-fns": "^2.22.1",
    "esbuild": "^0.12.5",
    "focus-visible": "^5.2.0",
    "html-minifier": "^4.0.0",
    "markdown-it": "^12.3.2",
    "mime": "^2.5.2",
    "node-sass": "^7.0.0",
    "postcss-preset-env": "^6.7.0",
    "svg-sprite": "^1.5.0",
    "terser": "^4.8.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "serve": "^11.3.2"
  },
  "browserslist": {
    "production": [
      ">3%",
      "not dead",
      "defaults",
      "safari >= 12.4",
      "ios >= 12.4",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint"
    ],
    "*.+(js|ts|css|scss)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
